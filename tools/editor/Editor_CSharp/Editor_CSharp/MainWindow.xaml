<Window x:Class="Editor_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor_CSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <ToolBarPanel HorizontalAlignment="Stretch" Height="26" VerticalAlignment="Top">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem x:Name="menuOpen" Header="_Open" Click="menuOpen_Click"/>
                </MenuItem>
            </Menu>
        </ToolBarPanel>
    </Grid>
</Window>

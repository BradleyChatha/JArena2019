<UserControl x:Class="Editor_CSharp.Controls.Nullbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor_CSharp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CheckBox x:Name="nullbox" VerticalAlignment="Center" ToolTip="Ticked = Use (not null). Not Ticked = Don't use (null)"/>
            <Rectangle Width="5" Fill="#FFA0A0A0"/>
        </StackPanel>
    </Grid>
</UserControl>

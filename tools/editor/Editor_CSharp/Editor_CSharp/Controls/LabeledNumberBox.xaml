<UserControl x:Class="Editor_CSharp.Controls.LabeledNumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor_CSharp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="label" VerticalAlignment="Center" Content="UNO:"/>
            <TextBox x:Name="input" VerticalAlignment="Center" Width="60" PreviewKeyDown="input_PreviewKeyDown"/>
        </StackPanel>
    </Grid>
</UserControl>
